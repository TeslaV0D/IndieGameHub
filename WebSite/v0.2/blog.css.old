/* contact-styles.css */

/* Variables for easy theme switching */
:root {
  --bg-color: #0f0f0f;
  --text-color: #c7c7c7;
  --accent-color: #495057;
  --card-bg-color: #174892;
  --shadow-color: rgba(0, 0, 0, 0.12);
  --transition-speed: 0.3s;
  --border-radius: 10px;
  /* Specific background colors */
  --nav-bg-light: #1450aa;
  /* Login Button Colors */
  --login-button-bg: var(--accent-color);
  --login-button-hover-bg: var(--accent-color);
  --login-button-text-color: white;
  --login-button-hover-text-color: white;
}

/* Dark Mode */
body.dark-mode {
  --bg-color: #121212;
  --text-color: #ced4da;
  --accent-color: #6c757d;
  --card-bg-color: #1e1e1e;
  --shadow-color: rgba(255, 255, 255, 0.08);
}

/* Dark Mode Navigation Background */
body.dark-mode nav {
  background-color: #174892;
}

/* Body Styles */
body {
  font-family: 'Inter', sans-serif;
  background-color: var(--bg-color);
  color: var(--text-color);
  margin: 0;
  transition: background-color var(--transition-speed) ease, color var(--transition-speed) ease;
  line-height: 1.6;
}

/* General Padding and Spacing */
header,
main,
footer {
  padding: 1.5rem -2rem;
}

section {
  margin-bottom: 3rem;
}

h2 {
  font-size: 2rem;
  padding: 2rem;
  margin-bottom: 1.2rem;
  font-weight: 600;
}

/* Navigation */
nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem 0;
  width: 100%;
}

.logo,
.dark-mode-toggle {
  flex-shrink: 0;
  padding-left: 2rem;
}

.logo a {
  color: var(--text-color);
  text-decoration: none;
}

nav ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  gap: 2rem;
  justify-content: center;
  flex-grow: 1;
}

nav a {
  display: inline-block;
  padding: 0.5rem 0;
  color: #c7c7c7;
  text-decoration: none;
  transition: color 0.2s ease, transform 0.2s ease;
  position: relative;
}

nav a::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background-color: #c7c7c7;
  transform: translateX(-50%);
  transition: width 0.3s cubic-bezier(0.22, 0.61, 0.36, 1);
  z-index: 1;
}

nav a:hover,
nav a:focus {
  color: #c7c7c7;
  transform: scale(1.03);
  outline: none;
}

nav a:hover::before,
nav a:focus::before {
  width: 80%;
}

nav ul li {
  position: relative;
  padding: 0.5rem 1rem;
  border-radius: var(--border-radius);
  transition: background-color var(--transition-speed);
  background-color: rgba(0, 0, 0, 0.568);
}

nav ul li:hover,
nav ul li:focus-within {
  background-color: rgba(0, 0, 0, 0.664);
}

/* Login Button */
.nav-buttons {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.login-button {
  background-color: var(--login-button-bg);
  color: var(--login-button-text-color);
  padding: 0.5rem 1rem;
  border-radius: var(--border-radius);
  text-decoration: none;
  transition: background-color var(--transition-speed), color var(--transition-speed);
  border: none;
}

.login-button:hover,
.login-button:focus {
  background-color: var(--login-button-hover-bg);
  color: var(--login-button-hover-text-color);
  opacity: 0.9;
}

/* Contact Form */
.contact-form {
  padding: 2.5rem;
  background-color: var(--card-bg-color);
  border-radius: var(--border-radius);
  box-shadow: 0 5px 10px var(--shadow-color);
}

.contact-form label {
  display: block;
  margin-bottom: 0.6rem;
  font-weight: 500;
}

.contact-form input[type="text"],
.contact-form input[type="email"],
.contact-form textarea {
  width: 100%;
  padding: 0.9rem;
  margin-bottom: 1.2rem;
  border: 1px solid var(--accent-color);
  border-radius: var(--border-radius);
  box-sizing: border-box;
  transition: border-color 0.2s ease;
  font-family: inherit;
}

.error-message {
  color: red;
  margin-top: -1rem;
  margin-bottom: 1rem;
  font-size: 0.875rem;
}

.contact-form input[type="text"]:focus,
.contact-form input[type="email"]:focus,
.contact-form textarea:focus {
  border-color: var(--text-color);
  outline: none;
}

.contact-form input:invalid,
.contact-form textarea:invalid {
  border-color: red;
}

.contact-form button[type="submit"] {
  background-color: var(--accent-color);
  color: white;
  padding: 0.9rem 1.8rem;
  border: none;
  border-radius: var(--border-radius);
  cursor: pointer;
  transition: background-color 0.2s ease, transform 0.2s ease;
  font-weight: 500;
}

.contact-form button[type="submit"]:hover,
.contact-form button[type="submit"]:focus {
  opacity: 0.9;
  transform: scale(1.05);
  outline: none;
}

/* Footer */
footer {
  flex-shrink: 0;
  text-align: center;
  padding: 1.5rem;
  background-color: var(--card-bg-color);
  border-top: 1px solid var(--accent-color);
  margin-top: auto;
  width: 100%;
  box-sizing: border-box;
}

/* Responsive Design */
@media (max-width: 768px) {
  header,
  main,
  footer {
    padding: 1.2rem;
  }

  nav {
    flex-direction: column;
  }

  .nav-buttons {
    flex-direction: row;
    width: auto;
  }

  .login-button {
    width: auto;
    text-align: center;
  }

  nav ul {
    flex-direction: column;
    align-items: center;
    gap: 1.2rem;
    flex-grow: 0;
    width: 100%;
  }

  nav ul li {
    width: 100%;
    text-align: center;
  }
}